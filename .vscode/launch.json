{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/server/start.ts"],
      "outputCapture": "std",
      "sourceMaps": true,
      "protocol": "inspector",
      "env": {
        "PORT": "3001",
        "NODE_ENV": "dev"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TsRunner",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/tsRunner.ts"],
      "outputCapture": "std",
      "sourceMaps": true,
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Testnet Inscribor",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": [
        "${workspaceFolder}/src/standalone-tests/integration/regtest/inscriber.testnet.ts"
      ],
      "outputCapture": "std",
      "sourceMaps": true,
      "protocol": "inspector",
      "env": {
        "BTC_NETWORK": "testnet"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug LitAction",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js"
      ],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/lit/action/PkpBtcSwapEth.ts"],
      "outputCapture": "std",
      "sourceMaps": true,
      "smartStep": true,
      "protocol": "inspector",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json",
        "TS_NODE_FILES": "true",
        "NODE_ENV": "dev"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug ListingService test",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**/*.js"
      ],
      "runtimeArgs": ["${workspaceRoot}/node_modules/.bin/jest", "--runInBand"],
      "args": ["ListingService"],
      "outputCapture": "std",
      "sourceMaps": true,
      "smartStep": true,
      "protocol": "inspector",
      "env": {
        "NODE_ENV": "dev"
      }
    }
  ]
}
