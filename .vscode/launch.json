{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server",
      "skipFiles": ["<node_internals>/**"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/src/server/start.ts"],
      "outputCapture": "std",
      "sourceMaps": true,
      "protocol": "inspector"
    }
  ]
}
